@model TskukarWeb.ViewModels.CondutorViewModels;
@{
    ViewData["Title"] = "Home Page";
}
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Condutor</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Digite seu nome">
  </div>
    <div class="form-group">
    <label for="exampleFormControlSelect1">Marca:</label>
    <select name="marca" >
        <option value="">Selecione</option>
        @foreach (var item in Model.marcas)
        {
         <option value="@item.Nome">@item.Nome</option>   
        } 
     <select class="form-control" id="exampleFormControlSelect1"> 
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Modelo:</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option>Cruze</option>
      <option>Gol</option>
      <option>Pajero</option>
      <option>Sandero</option>
      <option>Corolla</option>
    </select>
  </div>
   <div class="form-group">
    <label for="exampleInputPassword1">Placa</label>
    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="XXX-XXXX">
  </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
